<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StepsProgress">

        <attr name="line_padding" format="dimension" />
        <attr name="line_width" format="dimension" />
        <attr name="active_step_color" format="color"/>
        <attr name="inActive_step_color" format="color"/>
        <attr name="skip_step_color" format="color"/>
        <attr name="step_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

</resources>